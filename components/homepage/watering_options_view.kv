<WateringOptionsView>:
    name: "watering_options_view"

    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"

        MDBoxLayout:
            size_hint: 1, 0.4
            orientation: "vertical"
            padding: 10

            MDBoxLayout:
                id: toggle_watering_program
                orientation: "horizontal"
                size_hint: 0.5, None
                halign: "center"
                pos_hint: {"center_x": 0.5, "center_y": 0}
                spacing: 10
                padding: 20

                MDLabel:
                    text: "Enable watering programs"
                    font_style: "H4"
                    size_hint: 0.5, None
                    pos_hint: {"center_x": 0.5, "center_y": 0}

                MDSwitch:
                    id: watering_program_switch
                    size_hint: None, None
                    pos_hint: {"center_x": 0.5, "center_y": 0}
                    active: root.are_programs_active
                    on_active: root.toggle_watering_program()

            MDLabel:
                text: "Current watering program:"
                halign: "center"
                font_style: "H4"
                size_hint: 1, None
                pos_hint: {"center_x": 0.5, "center_y": 0}

            MDFillRoundFlatButton:
                id: mainbutton
                text: "Change"
                font_size: 24
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                disabled: not root.are_programs_active

        MDBoxLayout:
            size_hint: 1, 0.6
            padding: [10, 30, 10, 30]
            orientation: "vertical"

            MDFillRoundFlatButton:
                id: water_now_button
                text: "Water now"
                font_size: 24
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5}
                on_release: root.toggle_water_now()

            MDLabel:
                id: water_now_label
                text: root.watering_label_variable
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": 0.5}
                size_hint: 1, None