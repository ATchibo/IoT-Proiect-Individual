<WateringOptionsView>:
    name: "watering_options_view"

    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"

        MDBoxLayout:
            size_hint: 1, 0.4
            orientation: "vertical"
            padding: 10

            MDLabel:
                text: "Current watering program: "
                halign: "center"
                font_style: "H4"
                size_hint: 1, None
                pos_hint: {"center_x": 0.5, "center_y": 0}

            MDDropDownItem:
                id: drop_item
                text: 'Item 0'
                font_size: 24
                pos_hint: {"center_x": 0.5, "center_y": 0}
                on_release: root.menu.open()

        MDBoxLayout:
            size_hint: 1, 0.6
            padding: [10, 30, 10, 30]
            orientation: "vertical"

            MDFillRoundFlatButton:
                text: "Water now"
                font_size: 24
                elevation: 1
                pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Running time: 4s;\nWater quantity: 4l"
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": 0.5}
                size_hint: 1, None