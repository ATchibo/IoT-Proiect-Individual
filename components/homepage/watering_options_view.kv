<WateringOptionsView>:
    name: "watering_options_view"

    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"

        MDBoxLayout:
            size_hint: 1, 0.5
            orientation: "vertical"
            padding: 10
            pos_hint: {"center_x": 0.5, "center_y": 0}

            MDBoxLayout:
                id: toggle_watering_program
                orientation: "horizontal"
                halign: "center"
                pos_hint: {"center_x": 0.5}
                padding: 20

                MDLabel:
                    text: "Enable watering programs"
                    font_style: "H5"
                    size_hint: 0.5, None
                    pos_hint: {"center_x": 0.5, "center_y": 0}

                MDSwitch:
                    id: watering_program_switch
                    size_hint: None, None
                    pos_hint: {"center_x": 0.5, "center_y": 0}
                    active: root.are_programs_active
                    on_active: root.toggle_watering_program()

            MDLabel:
                text: "Current watering program:"
                halign: "center"
                font_style: "H5"
                size_hint: 1, None
                pos_hint: {"center_x": 0.5}

            Spinner:
                id: watering_program_spinner
                text: "Select a program"
                values: root.programs.keys()
                size_hint: 0.3, None
                pos_hint: {"center_x": 0.5}
                auto_width: True
                sync_height: True
                auto_height: False
                height: 40
                on_text: root.change_program()
                background_color: app.theme_cls.primary_color
                text_color: 0, 0, 0, 1

        MDBoxLayout:
            size_hint: 1, 0.5
            padding: [10, 30, 10, 10]
            orientation: "vertical"

            MDFillRoundFlatButton:
                id: water_now_button
                text: "Water now"
                font_style: "H5"
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5}
                on_release: root.toggle_water_now()

            MDLabel:
                id: water_now_label
                text: root.watering_label_variable
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": 0.5}
                size_hint: 1, None