<WateringOptionsView>:
    name: "watering_options_view"

    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"

        MDBoxLayout:
            size_hint: 1, 0.4
            orientation: "vertical"
            padding: 10

            MDLabel:
                text: "Current watering program: "
                halign: "center"
                font_style: "H4"
                size_hint: 1, None
                pos_hint: {"center_x": 0.5, "center_y": 0}

            MDFillRoundFlatButton:
                id: mainbutton
                text: "Change"
                font_size: 24
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            size_hint: 1, 0.6
            padding: [10, 30, 10, 30]
            orientation: "vertical"

            MDFillRoundFlatButton:
                id: water_now_button
                text: "Water now"
                font_size: 24
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5}
                on_release: root.water_now()

            MDLabel:
                id: water_now_label
                text: root.raspberry_controller.watering_time
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": 0.5}
                size_hint: 1, None