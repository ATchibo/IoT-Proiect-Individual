<GraphView>:
    name: "graph_view"

    MDLabel:
        text: "Soil humidity history"
        halign: "center"
        font_style: "H5"
        size_hint_y: 0.15

    MDBoxLayout:
        id: graph_box
        size_hint_y: 1

    MDStackLayout:
        size_hint: 1, 0.15
        padding: 10

        MDLabel:
            text: "Period: "
            halign: "right"
            font_style: "H6"
            size_hint: 0.5, 1

        MDDropDownItem:
            id: drop_item
            text: 'Item 0'
            size_hint_y: 1
            on_release: root.menu.open()
