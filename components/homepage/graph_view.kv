<GraphView>:
    name: "graph_view"

    MDLabel:
        text: "Soil humidity history"
        halign: "center"
        font_style: "H5"
        size_hint_y: 0.15

    MDBoxLayout:
        id: graph_box
        size_hint_y: 1

    MDBoxLayout:
        size_hint: 1, 0.15
        padding: 10

        MDBoxLayout:
            padding: [0, 0, 0, 15]
            size_hint: 0.5, None

            MDLabel:
                text: "Period: "
                halign: "right"
                font_style: "H6"
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0}

        MDBoxLayout:
            size_hint: 0.5, None

            MDFillRoundFlatButton:
                id: mainbutton
                text: "Change"
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
