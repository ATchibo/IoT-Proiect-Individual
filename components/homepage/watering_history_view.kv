<WateringHistoryView>:
    name: "watering_history_view"

    MDScrollViewRefreshLayout:
        id: refresh_layout
        refresh_callback: root.refresh_data
        root_layout: scroll_view
        size_hint: 1, 1
        scroll_distance: 5

        MDScrollView:
            id: scroll_view
            size_hint: 1, 1
            padding: dp(10)

            MDList:
                id: watering_history_list